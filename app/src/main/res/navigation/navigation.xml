<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/playAndRecord">


    <fragment
        android:id="@+id/playAndRecord"
        android:name="com.qndzia.tapformelody.playandrecord.PlayAndRecord"
        android:label="PlayAndRecord"
        tools:layout="@layout/fragment_play_and_record">
        <action
            android:id="@+id/action_playAndRecord_to_mySettingsFragment"
            app:destination="@id/mySettingsFragment" />
        <argument
            android:name="labelsOn"
            app:argType="boolean"
            android:defaultValue="true" />
    </fragment>
    <fragment
        android:id="@+id/mySettingsFragment"
        android:name="com.qndzia.tapformelody.preferences.MySettingsFragment"
        android:label="MySettingsFragment"
        >
        <action
            android:id="@+id/action_mySettingsFragment_to_playAndRecord"
            app:destination="@id/playAndRecord" />
    </fragment>
</navigation>